{
  "name": "exevo-pan",
  "version": "0.0.0",
  "author": "xandjiji <xandjiji@gmail.com>",
  "description": "The entire Exevo Pan stack monorepo",
  "license": "Unlicense",
  "homepage": "https://exevopan.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/xandjiji/exevo-pan"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean && rm -rf node_modules",
    "build": "turbo run build",
    "test": "turbo run test:all",
    "dev": "turbo run dev --parallel",
    "dev:scraper": "yarn --cwd apps/bazaar-scraper dev:scraper",
    "dev:front": "NEXT_PUBLIC_FRONT_DEV=true turbo run dev --scope=exevo-pan",
    "build:front": "NEXT_PUBLIC_FRONT_DEV=true turbo run build --scope=exevo-pan",
    "start:front": "NEXT_PUBLIC_FRONT_DEV=true turbo run start --scope=exevo-pan"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "test:all": {
        "outputs": [
          "coverage/**"
        ]
      },
      "lint": {},
      "format": {},
      "dev": {
        "cache": false
      },
      "start": {
        "cache": false
      },
      "clean": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}
